# Application settings
APP_NAME="Lead Generation Conversion Analyzer"
APP_VERSION="1.0.0"
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# Database - PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/conversion_analyzer

# CORS - Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# Security
SECRET_KEY=change-this-to-a-secure-random-string-in-production
REPORT_ACCESS_TOKEN_EXPIRE_HOURS=72

# Email settings (optional - for sending reports via email)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-password
# EMAIL_FROM=noreply@conversion-analyzer.se

# Analysis settings
SCRAPE_TIMEOUT=30
MAX_PAGE_SIZE=5000000

# Widget settings
WIDGET_ALLOWED_DOMAINS=*

# AI/Claude API settings (required for AI-enhanced reports)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
AI_ENABLED=true
AI_MODEL=claude-3-5-haiku-20241022
AI_MAX_TOKENS=1500
AI_TEMPERATURE=0.7
AI_FALLBACK_ON_ERROR=true
